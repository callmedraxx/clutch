# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
DB_HOST=postgres
DB_PORT=5432
DB_USER=clutch_user
DB_PASSWORD=clutch_password
DB_NAME=clutch_db
DB_POOL_MIN=2
DB_POOL_MAX=20

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=clutch_redis_password

# PostgreSQL Service Credentials (for docker-compose)
POSTGRES_USER=clutch_user
POSTGRES_PASSWORD=clutch_password
POSTGRES_DB=clutch_db

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
API_KEY=your-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*

POLYMARKET_API_BASE_URL=https://gamma-api.polymarket.com
POLYMARKET_POLLING_INTERVAL_TRENDING=30
POLYMARKET_POLLING_INTERVAL_CRYPTO=20
POLYMARKET_CACHE_TTL=30

# Polymarket Configuration
POLYMARKET_API_BASE_URL=https://gamma-api.polymarket.com
POLYMARKET_POLLING_INTERVAL_TRENDING=30
POLYMARKET_POLLING_INTERVAL_CRYPTO=20
POLYMARKET_POLLING_INTERVAL_POLITICS=45
POLYMARKET_POLLING_INTERVAL_FINANCE=60
POLYMARKET_POLLING_INTERVAL_SPORTS=60
POLYMARKET_CACHE_TTL=30
POLYMARKET_API_TIMEOUT=10000
POLYMARKET_MAX_RETRIES=3
